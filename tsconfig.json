// tsconfig.json
{
  "compilerOptions": {
    "isolatedModules": true,
    "moduleResolution": "node",
    // 这样就可以对 `this` 上的数据属性进行更严格的推断
    "strict": true,
    "target": "esnext",
    "module": "esnext",
    "types": ["vite/client"],
    "lib": [ "es2015", "es2016", "dom", "es2018.promise" ],
    "typeRoots": [
      "./node_modules/vue/types"
    ],
    "allowSyntheticDefaultImports":true
  }
}
